<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/notification_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Your bill is ready!"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notification_subject"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Subject"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notification_billready_image_left"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bill_ready_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/notification_larget"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_notification_large" />

            <ImageView
                android:id="@+id/notification_billready_image_right"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:cropToPadding="true"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_bill_ready_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top">

        <Button
            android:id="@+id/pay_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="Pay Now"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/remind_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Remind Me"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/view_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/small_margin"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="More&#10;Details"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
